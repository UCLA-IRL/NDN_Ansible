[Unit]
Description=New generation of NDN repo
Documentation=man:ndn-repo-ng
Requires=nfd.service
After=nfd.service

[Service]
Environment=HOME=/var/lib/ndn/repo-ng-2
User=ndn
Group=ndn
ExecStart=/usr/bin/ndn-repo-ng -c /etc/ndn/repo-ng-2.conf
Restart=on-failure
ProtectSystem=full
PrivateTmp=yes
PrivateDevices=yes
ProtectHome=yes

[Install]
WantedBy=multi-user.target

