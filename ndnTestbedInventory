[ndngateways]

# We need to get link costs for neighbors from somewhere but we want to make
# sure that the cost is same for both endpoints. i.e. the WU/MEMPHIS link should
# have the same cost on the WU end as on the MEMPHIS end.
# Hyperbolic Routing params (hr_radius, hr_angle) need updating
# WU needs extra strategy for ndndemo added in nfd-init.sh

WU ansible_host=wundngw.arl.wustl.edu site=/edu/wustl neighbors={MEMPHIS,ARIZONA} default_prefix="/ndn/edu/wustl" advertised_prefixes={"/ndn/edu/wustl"} router_name="wundngw" hr_radius=123.456 hr_angle=1.45 network_region={"/ndn/edu/wustl"}
ARIZONA ansible_host=hobo.cs.arizona.edu site=/edu/arizona neighbors={REMAP,MEMPHIS,WU} default_prefix="/ndn/edu/arizona" advertised_prefixes={"/ndn/edu/arizona"} router_name="hobo" hr_radius=123.456 hr_angle=1.45 network_region={"/ndn/edu/arizona"}
MEMPHIS ansible_host=titan.cs.memphis.edu site=/edu/memphis neighbors={ARIZONA,WU} default_prefix="/ndn/edu/memphis" advertised_prefixes={"/ndn/edu/memphis"} router_name="titan" hr_radius=123.456 hr_angle=1.45 network_region={"/ndn/edu/memphis"}
UCLA ansible_host=spurs.cs.ucla.edu site=/edu/ucla neighbors={REMAP} default_prefix="/ndn/edu/ucla" advertised_prefixes={"/ndn/edu/ucla","KEY","/ndn/KEY","/ndn/guest"} router_name="cs/spurs" hr_radius=123.456 hr_angle=1.45 network_region={"/ndn/edu/ucla","/ndn/guest"}
REMAP ansible_host=128.97.98.7 site=/edu/ucla/remap neighbors={UCLA,ARIZONA} default_prefix="/ndn/edu/ucla/remap" advertised_prefixes={"/ndn/edu/ucla/remap"} router_name="cs/aleph" hr_radius=123.456 hr_angle=1.45 network_region={"/ndn/edu/ucla/remap"}


[all:vars]
ansible_user=ndnops
ansible_ssh_private_key_file=~/.ssh/id_rsa
ndnNetwork=/ndn/
